<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.student.order.Menu_context">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/background3_1"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="桌號"
                android:textSize="20sp"
                android:textColor="#2d2d2d"/>
            <TextView
                android:id="@+id/Tablenumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="20sp"
                android:textColor="#2d2d2d" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#2d2d2d"
                android:text="訂單編號" />
            <TextView
                android:id="@+id/Ordernumber"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="1061025001"
                android:textSize="20sp"
                android:textColor="#2d2d2d" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="點餐員編"
                android:textSize="20sp"
                android:textColor="#2d2d2d"/>
            <TextView
                android:id="@+id/waiternumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="001"
                android:textSize="20sp"
                android:textColor="#2d2d2d" />
            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="結帳員編"
                android:textSize="20sp"
                android:textColor="#2d2d2d"/>

            <TextView
                android:id="@+id/cashiernumber"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="002"
                android:textSize="20sp"
                android:textColor="#2d2d2d" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="客戶姓名"
                android:textSize="20sp"
                android:textColor="#2d2d2d" />
            <TextView
                android:id="@+id/client_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="張曉明"
                android:textSize="20sp"
                android:textColor="#2d2d2d" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="客戶電話"
                android:textSize="20sp"
                android:textColor="#2d2d2d" />

            <TextView
                android:id="@+id/client_number"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="0911111111"
                android:textSize="20sp"
                android:textColor="#2d2d2d" />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/menuinformation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:padding="5dp"
        android:layout_margin="10sp"
        android:background="@drawable/editborder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="總金額"
                android:layout_marginRight="5dp"
                android:textSize="30sp"
                android:textColor="#2d2d2d"  />
            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1000"
                android:textSize="30sp"
                android:textColor="#2d2d2d"  />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/goback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbtn"
                android:layout_marginRight="10dp"
                android:text="取消" />

            <Button
                android:id="@+id/checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loginbtn"
                android:text="結帳" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
