<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context="com.example.student.order.Sec">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/waiter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#99fdad0c"
             />
        <ImageView
            android:id="@+id/out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-120dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/waiter" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外場"
            android:textSize="50sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/cashier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99019e94"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-120dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:scaleType="centerInside"
            android:src="@drawable/cashier" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="櫃台"
            android:textSize="50sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/chef"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99ff504d"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-120dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:src="@drawable/chef" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="廚房"
            android:textSize="50sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
</LinearLayout>
