<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.order.Waiter"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/background3_1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDate"
            android:textColor="#2d2d2d"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2d2d2d"
                android:textSize="20sp"
                android:text="員工編號："/>
            <TextView
                android:id="@+id/txtNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2d2d2d"
                android:textSize="20sp"
                android:hint="001" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2d2d2d"
                android:textSize="20sp"
                android:text="員工姓名："/>
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2d2d2d"
                android:textSize="20sp"
                android:hint="xxxx"/>
            </LinearLayout>

    </LinearLayout>
    <TabHost
        android:id="@+id/tabHost_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/tab_eatIn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <fragment
                            android:id="@+id/table1"
                            android:name="com.example.student.order.tableFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            tools:layout="@layout/fragment_table"/>
                        <fragment
                            android:id="@+id/table2"
                            android:name="com.example.student.order.tableFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            tools:layout="@layout/fragment_table"/>
                        <fragment
                            android:id="@+id/table3"
                            android:name="com.example.student.order.tableFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            tools:layout="@layout/fragment_table"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <fragment
                            android:id="@+id/table4"
                            android:name="com.example.student.order.tableFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            tools:layout="@layout/fragment_table"/>
                        <fragment
                            android:id="@+id/table5"
                            android:name="com.example.student.order.tableFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            tools:layout="@layout/fragment_table"/>
                        <fragment
                            android:id="@+id/table6"
                            android:name="com.example.student.order.tableFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            tools:layout="@layout/fragment_table"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <fragment
                            android:id="@+id/table7"
                            android:name="com.example.student.order.tableFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            tools:layout="@layout/fragment_table"/>
                        <fragment
                            android:id="@+id/table8"
                            android:name="com.example.student.order.tableFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            tools:layout="@layout/fragment_table"/>
                        <fragment
                            android:id="@+id/table9"
                            android:name="com.example.student.order.tableFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            tools:layout="@layout/fragment_table"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab_takeAway"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_marginBottom="25dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textColor="#2d2d2d"
                            android:text="單號"/>
                        <TextView
                            android:id="@+id/orderNumberTA"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textColor="#2d2d2d"
                            android:text="10190001"/>
                    </LinearLayout>-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_marginBottom="25dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textSize="25sp"
                            android:textColor="#2d2d2d"
                            android:text="客戶姓名"/>
                        <EditText
                            android:id="@+id/customerName"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent"
                            android:textSize="25sp"
                            android:textColor="#2d2d2d"
                            android:hint="請輸入客戶姓名"
                            android:background="@drawable/editborder"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_marginBottom="45dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textColor="#2d2d2d"
                            android:text="客戶電話"/>
                        <EditText
                            android:id="@+id/customerTel"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textSize="25sp"
                            android:textColor="#2d2d2d"
                            android:hint="請輸入客戶電話"
                            android:background="@drawable/editborder"/>
                    </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/loginbtn"
                        android:onClick="takeAwayOk"
                        android:text="確認送出"
                        android:textColor="#2d2d2d"
                        android:textSize="25sp" />


                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </TabHost>
</LinearLayout>
